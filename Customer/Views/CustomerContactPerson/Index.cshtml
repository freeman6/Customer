@model IEnumerable<Customer.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人資料管理";
    var contactTitle = (SelectList)ViewBag.contactTitle;
}

<h2>客戶聯絡人資料管理</h2>
<p>　</p>
<div>
    @Html.ActionLink("Create New", "Create")
</div>

<div class="input-group">
    @using (Html.BeginForm("Search", "CustomerContactPerson", FormMethod.Post, null))
    {
        @Html.Label("客戶聯絡人名稱：")
        @Html.TextBox("keyword", null, new { placeholder = "客戶聯絡人名稱" })
        <input type="submit" />
    }
    <dvi>
        @using (Html.BeginForm("SearchByContactTitle", "CustomerContactPerson", FormMethod.Post, null))
        {
            @Html.Label("聯絡人職稱：")
            @Html.DropDownList("Title", contactTitle)
            <input type="submit" />
        }
    </dvi>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.是否已刪除)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.是否已刪除)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>
