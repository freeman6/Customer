@model IEnumerable<Customer.Models.viwCustomerSummary>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2><b>客戶資料管理系統</b></h2>
    <p class="lead">本系統主要提供對客戶相關資料進行管理維護作業用.</p>
</div>

<div class="row">
    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行帳戶數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.聯絡人數量)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行帳戶數量)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.聯絡人數量)
                </td>
            </tr>
        }
    </table>
</div>